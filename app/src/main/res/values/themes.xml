<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFoodDiaryBookAOS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--del theme-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <!--이미지 추가 텍스트-->
    <style name="add_image_text">
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/size_18</item>
        <item name="android:paddingBottom">@dimen/size_18</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/size_20_sp</item>
        <item name="android:textColor">@color/image_select_color</item>
    </style>

    <!--검색 텍스트-->
    <style name="search_text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--roboto-->
    <style name="roboto_text_regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--roboto_dark-->
    <style name="roboto_dark_text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_dark_pop</item>
    </style>

    <style name="my_normal_box">
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:layout_marginEnd">@dimen/size_16</item>
        <item name="android:background">@drawable/round_rec_stroke</item>
        <item name="android:paddingTop">@dimen/size_17</item>
        <item name="android:paddingBottom">@dimen/size_17</item>
        <item name="android:layout_marginBottom">@dimen/size_9</item>
        <item name="android:paddingEnd">@dimen/size_12</item>
        <item name="android:paddingStart">@dimen/size_9</item>
    </style>

    <style name="login_text">
        <item name="android:layout_marginStart">@dimen/size_16</item>
        <item name="android:layout_marginEnd">@dimen/size_16</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:background">@drawable/round_rec_stroke_weak</item>
    </style>

    <style name="pop_up_button_style">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/size_10.5</item>
        <item name="android:paddingBottom">@dimen/size_10.5</item>
        <item name="android:background">@drawable/round_rec_stroke_weak</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/size_16_sp</item>
    </style>

    <style name="pop_up_text_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_dark_pop</item>
        <item name="android:textSize">@dimen/size_18_sp</item>
        <item name="android:layout_marginStart">@dimen/size_24</item>
        <item name="android:layout_marginEnd">@dimen/size_24</item>
        <item name="android:layout_marginTop">@dimen/size_24</item>
        <item name="android:layout_marginBottom">@dimen/size_4</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="pop_up_text_style_top">
        <item name="android:layout_marginBottom">@dimen/size_4</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/size_16_sp</item>
        <item name="android:layout_marginTop">@dimen/size_24</item>
    </style>

    <style name="text_day_of_weak">
        <item name="android:textSize">@dimen/size_12_sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/color_day_of_weak</item>
    </style>
</resources>