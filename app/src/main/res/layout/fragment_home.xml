<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TabHome.HomeFragment">
    <LinearLayout
        android:id="@+id/calendar_button"
        android:layout_marginBottom="@dimen/size_11.59"
        android:layout_marginTop="@dimen/size_47"
        android:layout_marginStart="@dimen/size_20"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:textFontWeight="700"
        android:layout_marginEnd="@dimen/size_11.59"
        android:text="2023.06"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/size_34_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="@dimen/size_3.33"
            android:src="@drawable/downarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginBottom="@dimen/size_92"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>