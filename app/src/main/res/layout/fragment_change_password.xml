<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rec"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context=".Dialog.PasswordChangeFragment">

    <TextView
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/size_16_sp"
        android:textFontWeight="700"
        android:text="비밀번호 변경 안내"
        android:layout_marginTop="@dimen/size_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment"
        android:textFontWeight="500"
        android:gravity="center"
        android:textColor="@color/text_dark_pop"
        android:textSize="@dimen/size_18_sp"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginEnd="@dimen/size_24"
        android:layout_marginTop="@dimen/size_28"
        android:layout_marginBottom="@dimen/size_4"
        android:text="@string/ment_find_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/size_24"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginEnd="@dimen/size_24"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginEnd="@dimen/size_8"
            android:gravity="center"
            android:paddingTop="@dimen/size_10.5"
            android:paddingBottom="@dimen/size_10.5"
            android:backgroundTint="@color/popup_button_white"
            android:background="@drawable/round_rec_stroke_weak"
            android:textFontWeight="700"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/size_16_sp"
            android:textColor="@color/text_dark_pop"
            android:text="닫기"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:paddingTop="@dimen/size_10.5"
            android:paddingBottom="@dimen/size_10.5"
            android:backgroundTint="@color/main_color"
            android:background="@drawable/round_rec_stroke_weak"
            android:textFontWeight="700"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/size_16_sp"
            android:textColor="@color/white"
            android:text="비밀번호 찾기"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>