<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rec"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context=".Dialog.PasswordChangeFragment">

    <TextView
        style="@style/pop_up_text_style_top"
        android:textFontWeight="700"
        android:text="비밀번호 변경 안내"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment"
        android:textFontWeight="500"
        style="@style/pop_up_text_style"
        android:text="@string/ment_change_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/size_24"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginEnd="@dimen/size_24"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginEnd="@dimen/size_8"
            style="@style/pop_up_button_style"
            android:backgroundTint="@color/popup_button_white"
            android:textFontWeight="700"
            android:textColor="@color/text_dark_pop"
            android:text="닫기"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:backgroundTint="@color/main_color"
            style="@style/pop_up_button_style"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:text="비밀번호 찾기"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>