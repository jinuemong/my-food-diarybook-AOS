<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_rec"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Dialog.PopUpDeleteFragment">

    <TextView
        android:textFontWeight="500"
        style="@style/pop_up_text_style"
        android:layout_marginTop="@dimen/size_24"
        android:text="모든 식사일기를 삭제하시겠습니까?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="@dimen/size_24"
        android:layout_marginStart="@dimen/size_24"
        android:layout_marginEnd="@dimen/size_24"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginEnd="@dimen/size_8"
            style="@style/pop_up_button_style"
            android:backgroundTint="@color/popup_button_white"
            android:textFontWeight="700"
            android:textColor="@color/text_dark_pop"
            android:text="아니오"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/pop_up_button_style"
            android:backgroundTint="@color/main_color"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:text="네"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>